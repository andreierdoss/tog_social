            <% end %>
          <% else %>
            <li><%=@profile.full_name%> tiene 0 followers.</li>
          <% end %>
        </ul>
    </div>    
</div>    

<div class="portlet portletG" id="portlet_followings">
    <h2><span>Followings (<%= @profile.followings.size %>)</span></h2>
    <div class="portlet_content">
        <ul class="clearfix">
          <% unless @profile.followings.blank? %>
            <% for friend in @profile.followings %>
              <li><%=link_to icon_for_profile(friend, 'small'), profile_path(friend), :title => friend.full_name %></li>
            <% end %>
          <% else %>
            <li><%=@profile.full_name%> tiene 0 followings.</li>
          <% end %>
        </ul>
    </div>    
</div>    

<% end %>